<% if flash[:alert] %>
    <%= js add_gritter(flash[:alert],title: "Heather Shockney Portfolio", sticky: false) %>
<% elsif flash[:error] %>
    <%= js add_gritter(flash[:error],title: "Heather Shockney Portfolio", sticky: false) %>
<% else %>
    <%= js add_gritter(flash[:notice],title: "Heather Shockney Portfolio", sticky: false) %>
<% end %>